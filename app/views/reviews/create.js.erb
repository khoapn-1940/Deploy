<% review = @comment_tour %>
element = '<div class="panel panel-white post panel-shadow" id="R<%= review.id%>"><div class="post-heading"><div class="pull-left image"><%= link_to view_other_user_information_path(user_id: review.user.id) do %><%= image_tag "#{review.user.avatar}",  alt: "Tour Image", class: "img-circle avatar" %><% end %></div><div class="pull-left meta"><div class="title h5"><%= link_to view_other_user_information_path(user_id: review.user.id) do %><b> <%= review.user.name %> </b><% end %></div><h6 class="text-muted time"> <%= review.updated_at %></h6></div></div><div class="post-description"><p> <%= review.content%> </p><div class="stats"><% if current_user.likes.find_by(review_id: review.id).nil? %><%= link_to likes_path(id: review.id), method: :POST, class:"btn-default stat-item", id: "R#{review.id}L", remote: true do %><i class="fa fa-thumbs-up icon"></i> <%= review.likes.count%><% end%><% else%><%= link_to like_path(id:  review.id), method: "DELETE", class:"stat-item" ,id: "R#{review.id}L", remote: true do %><i class="fa fa-thumbs-up icon"></i> <%= review.likes.count%><% end %><%end%></div></div></div>';
$("#review_content").val('');
$(".panel-white").prepend(element);
